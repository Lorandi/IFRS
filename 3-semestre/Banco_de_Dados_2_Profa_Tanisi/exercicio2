select f.nome,d.nome
from funcionario f left outer join departamento d
on f.id_departamento = d.id_departamento;

select f.nome from funcionario f
where f.salario in (5000,3000);

select * from funcionario

select id_departamento,max(salario)
from funcionario
group by id_departamento

select nome,id_departamento, salario
from funcionario
where (id_departamento,salario)
in ( select id_departamento,max(salario)
from funcionario
group by id_departamento);

select nome, salario
from funcionario
where salario > all ( select f.salario
from funcionario f, departamento d
where f.id_departamento = d.id_departamento
and d.nome='Rh');